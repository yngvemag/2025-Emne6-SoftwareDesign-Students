@page "/users/{id:guid}"
@using StudentBloggClient.Models.Users

@inject StudentBloggClient.Services.Api.IUsersApiClient Api
@inject NavigationManager Nav

<h3 class="mb-3">User details</h3>

@if (_isLoading)
{
    <div class="alert alert-info">Loading...</div>
}
else if (_error is not null)
{
    <div class="alert alert-danger">@_error</div>
}
else if (_model is null)
{
    <div class="alert alert-warning">User not found.</div>
}
else
{
    <EditForm Model="_model" OnValidSubmit="Save">
        <DataAnnotationsValidator />
        <div class="row g-3">
            <div class="col-md-12">
                <label class="form-label">Id</label>
                <input class="form-control" value="@_model.Id" readonly />
            </div>
            <div class="col-md-12">
                <label class="form-label">UserName</label>
                <InputText class="form-control" @bind-Value="_model.UserName" />
            </div>
            <div class="col-md-12">
                <label class="form-label">First name</label>
                <InputText class="form-control" @bind-Value="_model.FirstName" />
            </div>
            <div class="col-md-12">
                <label class="form-label">Last name</label>
                <InputText class="form-control" @bind-Value="_model.LastName" />
            </div>
            <div class="col-md-12">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="_model.Email" />
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-outline-secondary" href="/users">Back</a>
        </div>
    </EditForm>
}

@code {
    [Parameter] public Guid id { get; set; }

    private UserDto? _model;
    private bool _isLoading;
    private string? _error;

    protected override async Task OnParametersSetAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        _isLoading = true; _error = null;
        try
        {
            _model = await Api.GetUserByIdAsync(id);
        }
        catch (Exception ex) { _error = ex.Message; }
        finally { _isLoading = false; }
    }

    private async Task Save()
    {
        if (_model is null) return;
        var updated = await Api.UpdateUserAsync(_model.Id, _model);
        if (updated is null)
        {
            _error = "Failed to update user.";
            return;
        }
        Nav.NavigateTo("/users");
    }
}
